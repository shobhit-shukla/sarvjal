<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="container">
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>

      <th><%= model_class.human_attribute_name(:name) %></th>

      <th><%= model_class.human_attribute_name(:address) %></th>

      <th><%= model_class.human_attribute_name(:phone) %></th>

      <th><%= model_class.human_attribute_name(:receipt_number) %></th>

      <th><%= model_class.human_attribute_name(:registration_number) %></th>

      <th><%= model_class.human_attribute_name(:jars_with_customer) %></th>

      <th><%= model_class.human_attribute_name(:time) %></th>

      <th><%= model_class.human_attribute_name(:day) %></th>

      <th><%= model_class.human_attribute_name(:customer_id) %></th>

      <th><%= model_class.human_attribute_name(:scheme_id) %></th>

      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.id, customer_path(customer) %></td>

        <td><%= customer.name %></td>

        <td><%= customer.address %></td>

        <td><%= customer.phone %></td>

        <td><%= customer.receipt_number %></td>

        <td><%= customer.registration_number %></td>

        <td><%= customer.jars_with_customer %></td>

        <td><%= customer.time %></td>

        <td><%= customer.day %></td>

        <td><%= customer.customer_id %></td>

        <td><%= customer.scheme_id %></td>

        <td><%=l customer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_customer_path(customer), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      customer_path(customer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_customer_path,
            :class => 'btn btn-primary' %>
