<%= form_for @customer, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-3 control-label' %>
    <div class="col-sm-5 ">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address, :class => 'col-sm-3 control-label' %>
    <div class="col-sm-5 ">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, :class => 'col-sm-3 control-label' %>
    <div class="col-sm-5 ">
      <%= f.text_field :phone, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :receipt_number, :class => 'col-sm-3 control-label' %>
    <div class="col-sm-5 ">
      <%= f.text_field :receipt_number, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :registration_number, :class => 'col-sm-3 control-label' %>
    <div class="col-sm-5 ">
      <%= f.text_field :registration_number, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :jars_with_customer, :class => 'col-sm-3 control-label' %>
    <div class="col-sm-5 ">
      <%= f.text_field :jars_with_customer, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :time, :class => 'col-sm-3 control-label' %>
    <div class="col-sm-5 ">
      <%= f.text_field :time, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :day, :class => 'col-sm-3 control-label' %>
    <div class="col-sm-5 ">
      <%= f.text_field :day, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :customer_id, :class => 'col-sm-3 control-label' %>
    <div class="col-sm-5 ">
      <%= f.text_field :customer_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :scheme_id, :class => 'col-sm-3 control-label' %>
    <div class="col-sm-5 ">
      <%= f.text_field :scheme_id, :class => 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-1">
        <%= f.submit "Save", :class => 'btn btn-lg btn-primary' %>
    </div>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                customers_path, :class => 'btn btn-lg btn-danger' %>
  </div>
<% end %>
