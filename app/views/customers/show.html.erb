<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @customer.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @customer.address %></dd>

  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @customer.phone %></dd>

  <dt><strong><%= model_class.human_attribute_name(:receipt_number) %>:</strong></dt>
  <dd><%= @customer.receipt_number %></dd>

  <dt><strong><%= model_class.human_attribute_name(:registration_number) %>:</strong></dt>
  <dd><%= @customer.registration_number %></dd>

  <dt><strong><%= model_class.human_attribute_name(:jars_with_customer) %>:</strong></dt>
  <dd><%= @customer.jars_with_customer %></dd>

  <dt><strong><%= model_class.human_attribute_name(:time) %>:</strong></dt>
  <dd><%= @customer.time %></dd>

  <dt><strong><%= model_class.human_attribute_name(:day) %>:</strong></dt>
  <dd><%= @customer.day %></dd>

  <dt><strong><%= model_class.human_attribute_name(:customer_id) %>:</strong></dt>
  <dd><%= @customer.customer_id %></dd>

  <dt><strong><%= model_class.human_attribute_name(:scheme_id) %>:</strong></dt>
  <dd><%= @customer.scheme_id %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              customers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(@customer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(@customer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
